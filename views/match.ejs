<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Found Items</title>
  <link rel="stylesheet" href="/match.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

  
</head>

<body>

    <header class="head">
    <div class="logo">LoFo</div>
    <nav>
      <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/found">Found</a></li>
        <li><a href="/lost">Lost</a></li>
        <li><a href="/report">Check Reports</a></li>
      </ul>
    </nav>
    <div class="auth-buttons">
      <a href="/Login" class="login">Login</a>
      <a href="/register" class="signup">Register</a>
    </div>
  </header>

  <div class="container py-5">
    <h1 class="text-center mb-5 fw-bold">ðŸ“¦ Found Items</h1>

    <div class="row g-4">

      <% for (let item of founds) { %>
        <div class="col-md-4 col-sm-6">
          <div class="card h-100">
            <img src="<%= item.img || 'https://via.placeholder.com/300x200?text=No+Image' %>" 
                 class="card-img-top" alt="<%= item.title %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= item.title %></h5>
              <p class="card-text text-muted"><%= item.describtion %></p>
              <div class="mt-auto">
                <a href="#" class="btn btn-primary btn-sm">Contact</a>
                
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
</body>

</html>
