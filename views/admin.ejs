<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LoFo - Lost & Found</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <!-- Bootstrap CSS and Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/found.css">
</head>

<body>

  <header class="head">
    <div class="logo">LoFo</div>
    <nav>
      <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/found">Found</a></li>
        <li><a href="/lost">Lost</a></li>
        <li><a href="/report">Check Reports</a></li>
      </ul>
    </nav>
    <div class="auth-buttons">
      <a href="/Logout" class="logout">Logout</a>
    </div>
  </header>

  <main class="container my-5">
    <h2 class="text-center mb-5 fw-bold text-primary">Available Items</h2>

    <div class="row g-4">
      <% for (let item of items) { %>
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
          <div class="card h-100 shadow-sm border-0 rounded-4">
            <img src="<%= item.img %>" class="card-img-top" alt="Item Image" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-semibold mb-2">
                <%= item.title %>
              </h5>
              <p class="card-text text-muted mb-2">
                <%= item.describtion %>
              </p>

              <p class="mb-2">
                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                <span class="text-secondary">
                  <%= item.location %>
                </span>
              </p>

              <% if (item.describtionArr && item.describtionArr.length) { %>
                <div class="mb-3">
                  <% item.describtionArr.forEach(tag=> { %>
                    <span class="badge bg-info text-dark me-1">
                      <%= tag %>
                    </span>
                    <% }) %>
                </div>
                <% } %>

                  <div class="mt-auto">
                    <a href="#" class="btn btn-primary w-100">View Details</a>
                  </div>
            </div>
          </div>
        </div>
        <% } %>
    </div>
  </main>










</body>

</html>