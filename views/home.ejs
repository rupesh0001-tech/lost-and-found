      <div class="hero-buttons">
        <a href="/lost" class="btn btn-lost">Lost Something ?</a>
        <a href="/found" class="btn btn-found"> Found Something ?</a>
        <a href="/how-it-work" class=" btn btn-how"> how it works?</a>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
</html>